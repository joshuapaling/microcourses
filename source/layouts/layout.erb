<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "Microcourses" %></title>

    <%= stylesheet_link_tag "all" %>
    <%= javascript_include_tag  "all" %>
    <%# <link href='http://fonts.googleapis.com/css?family=Engagement|Source+Code+Pro:400,600|Open+Sans:400italic,700italic,400,700' rel='stylesheet' type='text/css'> %>
    <link href='http://fonts.googleapis.com/css?family=Just+Me+Again+Down+Here' rel='stylesheet' type='text/css'>
  </head>

  <body class="<%= page_classes %>">
    <div class="main container">
      <%= partial "layouts/gh_ribbon" %>
      <%= partial "layouts/header" %>
      <%= partial "layouts/nav" %>

      <% if current_page.data.title %>
        <h2 class="page-title"><%= current_page.data.title %></h2>
      <% end %>

      <%= yield %>
      <%= partial "layouts/footer" %>
    </div>
  </body>
  <% if build? %>
  <script type="text/javascript"><%= analytics data.project.ga %></script>
  <% end %>
</html>
