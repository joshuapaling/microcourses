<!doctype html>
<html class="course">
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= [current_page.data.title, "Microcourses"].compact.join(' - ') %></title>

    <%= stylesheet_link_tag "normalize", "all", "highlight" %>
    <%= javascript_include_tag  "all" %>
  </head>

  <body class="<%= page_classes %>">
    <div class="main">

      <% if current_page.data.title %>
        <h2 class="page-title"><%= current_page.data.title %></h2>
      <% end %>

      <%= yield %>
    </div>
  </body>

  <% if build? %>
    <script type="text/javascript"><%= analytics data.project.ga %></script>
  <% end %>
</html>
